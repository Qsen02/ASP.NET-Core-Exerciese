@model Panda.Models.User
@{
    ViewData["Title"] = "Login page";
}
<form asp-action="" method="post" class="form">
    <h2>Login</h2>
    <p class="input">
        <label for="Username">Username</label>
        <input type="text" asp-for="Username" placeholder="Username..."/>
    </p>
    <p class="input">
        <label for="Password">Password</label>
        <input type="password" asp-for="Password" placeholder="Password..." />
    </p>
    <button type="submit" class="bg-dark text-white">Login</button>
</form>

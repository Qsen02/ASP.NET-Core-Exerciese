@model Panda.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register page";
}
<form asp-action="OnRegister" method="post" class="form">
    <h2>Register</h2>
    @{
        if (TempData["msg"] != null)
        {
            <label class="text-danger text-center">@TempData["msg"]</label>
        }    
    }
    <p class="input">
        <label for="Username">Username</label>
        <input type="text" asp-for="Username" placeholder="Username..." value=@Model.Username/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </p>
    <p class="input">
        <label for="Password">Password</label>
        <input type="password" asp-for="Password" placeholder="Password..." value=@Model.Password />
    <span asp-validation-for="Password" class="text-danger"></span>
    </p>
    <p class="input">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword" placeholder="Confirm Password..." value=@Model.ConfirmPassword />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </p>
    <p class="input">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" placeholder="Email..." value=@Model.Email />
        <span asp-validation-for="Email" class="text-danger"></span>
    </p>
    <button type="submit" class="bg-dark text-white">Register</button>
</form>


@model Panda.Models.User
@{
    ViewData["Title"] = "Register page";
}
<form asp-action="OnRegister" method="post" class="form">
    <h2>Register</h2>
    <p class="input">
        <label for="Username">Username</label>
        <input type="text" asp-for="Username" placeholder="Username..." />
    </p>
    <p class="input">
        <label for="Password">Password</label>
        <input type="password" asp-for="Password" placeholder="Password..." />
    </p>
    <p class="input">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword" placeholder="Confirm Password..." />
    </p>
    <p class="input">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" placeholder="Email..." />
    </p>
    <button type="submit" class="bg-dark text-white">Register</button>
</form>


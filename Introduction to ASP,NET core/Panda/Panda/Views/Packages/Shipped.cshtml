@model List<Panda.Models.Package>
@{
    ViewData["Title"] = "Shipped packages";
}
<section>
    <h2 class="border-black border-2 border-bottom p-5">Shipped</h2>
    <table>
        <thead>
        <th>#</th>
        <th>Description</th>
        <th>Weight</th>
        <th>Estimated Delivery Date</th>
        <th>Recipient</th>
        <th>Actions</th>
        </thead>
        <tbody>
            @foreach (Package package in Model)
            {
                <tr>
                    <td>@package.Id</td>
                    <td>@package.Description</td>
                    <td>@package.Weight</td>
                    <td>@package.EstimateDeliveryDate</td>
                    <td>@package.Recipient.Username</td>
                    <td><a asp-route-id=@package.Id asp-controller="Packages" asp-action="OnDeliver" class="btn bg-dark text-white">Deliver</a></td>
                </tr>
            }
        </tbody>
    </table>
</section>

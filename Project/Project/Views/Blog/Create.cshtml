@model Project.ViewModels.CreateViewModel
@{
    ViewData["Title"] = "Create blog page";
}

<form asp-action="OnCreate" method="post" class="bg-dark d-flex flex-column gap-2 align-items-center p-2" style="border-radius:10px; width:600px; margin:50px auto">
    <h2 class="text-white">Create your post</h2>
    @{
        if (TempData["msg"] != null)
        {
            <label class="text-danger text-center">@TempData["msg"]</label>
        }
    }
    <div class="d-flex flex-column align-items-center gap-1" style="width:100%">
        <label for="Title" class="text-white">Title</label>
        <input type="text" asp-for="Title" style="width:90%; border-radius:10px;" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column align-items-center gap-1" style="width:100%">
        <label for="Content" class="text-white">Content</label>
        <textarea asp-for="Content" style="width:90%; border-radius:10px; height:100px;"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" style="border-radius:20px; background-color: deepskyblue; border:none;padding:10px 20px 10px 20px;font-weight:bold">Publish</button>
</form>